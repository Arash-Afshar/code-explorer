<div class="min-h-screen bg-base-100">

  <div class="container mx-auto px-4 py-8">
    <!-- Upload Section -->
    <div class="card bg-base-200 shadow-xl mb-8">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Upload New PDF
        </h2>

        <%= form_with model: @pdf || Pdf.new, local: true, class: "space-y-4", html: { multipart: true } do |form| %>
          <div class="form-control">
            <%= form.label :content, "PDF File", class: "label" %>
            <div class="file-input-wrapper">
              <%= form.file_field :content, 
                  accept: ".pdf", 
                  class: "file-input file-input-bordered file-input-primary w-full" %>
            </div>
            <div class="label">
              <span class="label-text-alt">Supported format: PDF only. The filename will be used as the PDF name.</span>
            </div>
          </div>

          <div class="form-control mt-6">
            <%= form.submit "Upload PDF", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- PDFs List Section -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Your PDFs (<%= @pdfs.count %>)
        </h2>

        <% if @pdfs.any? %>
          <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @pdfs.each do |pdf| %>
                  <tr>
                    <td>
                      <div class="flex items-center space-x-3">
                        <div class="avatar placeholder">
                          <div class="bg-neutral text-neutral-content rounded w-12">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                          </div>
                        </div>
                        <div>
                          <div class="font-bold"><%= pdf.name %></div>
                          <div class="text-sm opacity-50">ID: <%= pdf.id %></div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <% case pdf.processing_status %>
                      <% when 'pending' %>
                        <div class="badge badge-warning gap-2">
                          <span class="loading loading-spinner loading-xs"></span>
                          Pending
                        </div>
                      <% when 'processing' %>
                        <div class="badge badge-info gap-2">
                          <span class="loading loading-spinner loading-xs"></span>
                          Processing
                        </div>
                      <% when 'completed' %>
                        <div class="badge badge-success gap-2">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                          Completed
                        </div>
                      <% when 'failed' %>
                        <div class="badge badge-error gap-2">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                          </svg>
                          Failed
                        </div>
                      <% else %>
                        <div class="badge badge-neutral">Unknown</div>
                      <% end %>
                    </td>
                    <td>
                      <div class="text-sm">
                        <%= pdf.created_at.strftime("%B %d, %Y") %>
                      </div>
                      <div class="text-xs opacity-50">
                        <%= pdf.created_at.strftime("%I:%M %p") %>
                      </div>
                    </td>
                    <td>
                      <div class="flex space-x-2">
                        <%= link_to pdf_path(pdf), class: "btn btn-sm btn-outline btn-info" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                          View
                        <% end %>

                        <%= link_to pdf_path(pdf), 
                            data: { 
                              confirm: "Are you sure you want to delete this PDF?",
                              turbo_method: :delete
                            },
                            class: "btn btn-sm btn-outline btn-error" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          Delete
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="max-w-md mx-auto">
              <svg class="w-24 h-24 mx-auto text-base-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <h3 class="text-lg font-semibold mb-2">No PDFs uploaded yet</h3>
              <p class="text-base-content/60 mb-6">Upload your first PDF document to get started with processing and analysis.</p>
              <button class="btn btn-primary" onclick="document.querySelector('input[type=file]').click()">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                Upload Your First PDF
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-refresh the page every 30 seconds to update processing status
  setTimeout(function() {
    location.reload();
  }, 30000);
</script>
